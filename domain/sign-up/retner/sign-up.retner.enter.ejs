<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, 
  maximum-scale=1.0, minimum-scale=1.0">
    <title>RE:T : 회원가입</title>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link rel='stylesheet'
        href='https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&amp;display=swap'>
    <link rel="stylesheet" href="/style/sign-up/sign-up/style.css">

</head>

<body>
    <div class="screen-1">
        <h4 stroke="2" class="app">RE:T</h4>

        <h2 id="sign">회원가입</h2>
        <br>
        <form method="post" action="/sign-up/retner/complete">
            <div class="container">
                <label for="name" class="name">* 아이디<br>
                    <input type="text" name="login_id" placeholder="아이디입력" /><br><br>
                </label>
                <br>
                <label for="password" class="password">* 비밀번호<br>
                    <input type="password" name="password" placeholder="··················" /><br><br>
                </label>
                <br>
                <label for="password" class="password">* 비밀번호 확인<br>
                    <input type="password" name="password_repeat" placeholder="··················" /><br><br>
                </label>
                <br>
                <hr>
                <br>
                <label for="name" class="name">* 소속 기관<br>
                    <input type="text" name="organization" placeholder="소속기관입력" /><br><br>
                </label>
                <br>
                <label for="retner_verification" class="retner_verification">* 인증번호 입력<br>
                    <input type="retner_verification" name="retner_verification" placeholder="인증번호입력" /><br><br>
                </label>
                <br>
                <label for="retner_code" class="retner_code">* 리트너 코드<br>
                    <div class="code_box">
                        <input type="text" id="code_number" name="staff_id" value="" readonly>
                        <p class="code_p" id="copy"><ins>복사하기</ins></p>
                    </div>
                </label>

                <br>

            </div>
            <button class="confirm-sign-up">가입하기</button>
        </form>

    </div>

    <script>
        const characters = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';
        const codeLength = 6;

        // 무작위 코드 생성 함수
        function generateCode() {
            let code = '';
            for (let i = 0; i < codeLength; i++) {
                const randomIndex = Math.floor(Math.random() * characters.length);
                code += characters.charAt(randomIndex);
            }
            return code;
        }

        // 코드 생성 및 출력
        const uniqueCode = generateCode();
        const codeInput = document.getElementById('code_number');
        codeInput.value = uniqueCode;

        // 코드 복사 기능
        const copyText = document.getElementById('copy');
        copyText.addEventListener('click', copyToClipboard);

        function copyToClipboard() {
            const codeValue = codeInput.value;
            navigator.clipboard.writeText(codeValue)
                .then(() => {
                    alert('코드가 복사되었습니다: ' + codeValue);
                })
                .catch((err) => {
                    console.error('클립보드 복사 실패:', err);
                });
        }

    </script>

</body>
<script src="https://code.jquery.com/jquery-latest.min.js"></script>

</html>