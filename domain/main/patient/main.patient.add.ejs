<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../../component/component.head.html") %>
        <title>RE:T main</title>

        <link rel="stylesheet" href="/style/main/style.css">

</head>

<body class="screen-1">
    <div>
        <%- include('../../component/component.header.ejs') %>
    </div>

    <form action='/patient/add?day=<%=day%>' method="post">
        <div class="exerciseAdd">
            <h5 class="add">재활운동 추가하기</h5>
            <br>
            <div>
                <label for="name" class="addName">운동 이름</label>
                <div class="exercise_name">
                    <input type="text" id="exercise_name" name="exercise_name" placeholder="운동 이름 입력" /><br>
                </div>
            </div>
            <br>
            <div>
                <div class="exercise-count">
                    <label for="count">운동 횟수</label>
                    <div class="count-btn">
                        <button type="button" id="decrementBtn">-</button>
                        <span id="numberDisplay">0</span>
                        <input name="exercise_count" id="exercise_count" style="display: none;" type="number">
                        <button type="button" id="incrementBtn">+</button>
                    </div>
                </div>
            </div>
            <br>
            <div>
                <div>
                    <label for="note" class="addName">운동 부위</label><br>
                    <div class="exercise_name">
                        <input type="text" name="exercise_place" placeholder="운동 부위 입력">
                    </div>
                </div>
            </div>
            <div>

                <script>
                    // 초기 값 설정
                    let number = 0;
                    // 요소 선택
                    const decrementBtn = document.getElementById('decrementBtn');
                    const incrementBtn = document.getElementById('incrementBtn');
                    const numberDisplay = document.getElementById('numberDisplay');
                    const invisible = document.getElementById('exercise_count');

                    // 버튼 클릭 이벤트 리스너 설정
                    decrementBtn.addEventListener('click', decrement);
                    incrementBtn.addEventListener('click', increment);
                    // 숫자 감소 함수
                    function decrement() {
                        if (number > 0) {
                            number--;
                            updateNumberDisplay();
                        }
                    }
                    // 숫자 증가 함수
                    function increment() {
                        number++;
                        updateNumberDisplay();
                    }
                    // 숫자 화면 업데이트 함수
                    function updateNumberDisplay() {
                        numberDisplay.textContent = number;
                        console.log(invisible);
                        invisible.value = number;
                    }
                </script>
            </div>

            <br>
            <br>
            <div>
                <label for="level" class="addName">운동 설명 링크</label><br>
                <div class="exercise_name">
                    <input type="text" name="exercise_explain" placeholder="운동 설명 링크 입력">
                </div>
            </div>
        </div>

        <div>
            <button class="saveBtn" type="submit">
                <div>저장하기</div>
            </button>
        </div>
    </form>

</body>

</html>